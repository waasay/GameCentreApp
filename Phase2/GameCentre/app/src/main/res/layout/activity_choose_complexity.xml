<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group_0548.gamecentre.slidingtiles.ChooseComplexityActivity">

    <TextView
        android:id="@+id/ComplexText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="280dp"
        android:text="@string/complex_text"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/EasyButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:text="@string/easy_text" />

    <Button
        android:id="@+id/MediumButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:text="@string/medium_text" />

    <Button
        android:id="@+id/HardButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:text="@string/hard_text" />

    <EditText
        android:id="@+id/CustomUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:hint="Set maximum undo"
        android:inputType="number"
        android:digits="1234567890" />

    <Button
        android:id="@+id/SetUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:text="Set" />

    <TextView
        android:id="@+id/DefaultInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:textColor="@android:color/black"
        android:text="The default allowed undo is 3 (if nothing is inputted)." />

    <TextView
        android:id="@+id/TextUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/DefaultInfo"
        android:layout_marginTop="80dp"
        android:text="@string/current_undo_text"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CurrUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/TextUndo"
        android:layout_alignBaseline="@id/TextUndo"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>